
import java.util.*;

public class Main {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		
int codigo1, num1, codigo2, num2;
double vu1, vu2, vp;

Scanner sc = new Scanner (System.in);

codigo1 = sc.nextInt();
num1 = sc.nextInt();
vu1 = sc.nextDouble();

sc.nextLine();

codigo2 = sc.nextInt();
num2 = sc.nextInt();
vu2 = sc.nextDouble();

vp = (num1*vu1) + (num2*vu2);

System.out.printf("VALOR A PAGAR = R$ %.2f", vp);

		
	sc.close();
		
	}
} 


